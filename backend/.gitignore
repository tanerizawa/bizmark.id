# Backend-specific .gitignore for NestJS Application

# ===========================
# NESTJS SPECIFIC
# ===========================

# Compiled output
dist/
build/
*.js.map

# ===========================
# DEPENDENCIES
# ===========================

# Node modules
node_modules/

# Package manager files
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# ===========================
# ENVIRONMENT & CONFIG
# ===========================

# Environment variables
.env
.env.local
.env.development
.env.test
.env.production

# Configuration with sensitive data
config/local.json
config/production.json

# ===========================
# DATABASE
# ===========================

# Database files
*.db
*.sqlite
*.sqlite3

# Database dumps
*.sql
*.dump

# PostgreSQL
*.backup

# Migration temp files
migrations/*.temp.ts

# ===========================
# LOGS & MONITORING
# ===========================

# Log files
logs/
*.log
*.log.*

# Runtime data
pids/
*.pid
*.seed
*.pid.lock

# PM2
.pm2/

# ===========================
# TESTING & COVERAGE
# ===========================

# Test coverage
coverage/
.nyc_output/

# Jest
.jest/

# ===========================
# STORAGE & UPLOADS
# ===========================

# File uploads
uploads/
storage/
temp/

# MinIO data
minio-data/

# ===========================
# SECURITY
# ===========================

# SSL certificates
*.pem
*.key
*.crt
*.cert

# JWT secrets
jwt-secret.txt
secrets/

# ===========================
# DEVELOPMENT TOOLS
# ===========================

# TypeScript
*.tsbuildinfo

# ESLint
.eslintcache

# SWC
.swc/

# ===========================
# IDE & EDITORS
# ===========================

# VS Code
.vscode/
!.vscode/launch.json
!.vscode/tasks.json

# ===========================
# DOCKER & DEPLOYMENT
# ===========================

# Docker data volumes
docker-data/
postgres-data/
redis-data/

# Docker override
docker-compose.override.yml

# ===========================
# CACHE & TEMP
# ===========================

# Cache
.cache/
*.tmp
*.temp

# Backup files
*.backup
*.bak
*.old

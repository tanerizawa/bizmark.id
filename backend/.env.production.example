# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Node Environment
NODE_ENV=production

# Application Configuration
PORT=10000
APP_NAME=Bizmark UMKM
APP_URL=https://your-frontend-domain.com
API_URL=https://your-backend-domain.com

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_GLOBAL_PREFIX=api/v1

# Database Configuration (Use full DATABASE_URL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Configuration - MUST be different from development
JWT_SECRET=your_production_jwt_secret_at_least_64_chars_long_and_very_secure
JWT_REFRESH_SECRET=your_production_refresh_secret_at_least_64_chars_long_and_very_secure
JWT_EXPIRES_IN=3600

# Redis Configuration (Use full REDIS_URL for production)
REDIS_URL=redis://username:password@host:port

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_secure_email_password

# File Storage (Use cloud storage like AWS S3, Google Cloud, etc.)
S3_REGION=your-region
S3_BUCKET=your-production-bucket
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_ENDPOINT=https://s3.your-region.amazonaws.com

# Security Configuration
SESSION_SECRET=your_production_session_secret_at_least_64_chars_long
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_TIME=1800000

# Rate Limiting (More restrictive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com

# Database Pool Configuration (Production optimized)
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=30000

# Logging
LOG_LEVEL=error
ENABLE_DOCS=false

# Feature Flags
ENABLE_BULL_BOARD=false
ENABLE_METRICS=true
METRICS_ENABLED=true

# Monitoring & Health Check
HEALTH_CHECK_TIMEOUT=5000

# SSL Configuration (if needed)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

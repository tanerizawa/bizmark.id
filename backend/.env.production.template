# Production Environment Template for Render.com
# Copy this file to .env.production and fill in the actual values

# ====================================
# APPLICATION CONFIGURATION
# ====================================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# ====================================
# DATABASE CONFIGURATION
# ====================================
# These will be auto-configured by Render.com
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DIRECT_URL=postgresql://user:password@host:port/database?sslmode=require

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=10000

# ====================================
# REDIS CONFIGURATION
# ====================================
# This will be auto-configured by Render.com
REDIS_URL=redis://default:password@host:port
REDIS_TLS_URL=rediss://default:password@host:port

# ====================================
# JWT SECURITY (Generated by OpenSSL)
# ====================================
JWT_SECRET=REPLACE_WITH_OPENSSL_GENERATED_64_CHAR_HEX
JWT_REFRESH_SECRET=REPLACE_WITH_OPENSSL_GENERATED_64_CHAR_HEX
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ====================================
# SESSION SECURITY
# ====================================
SESSION_SECRET=REPLACE_WITH_OPENSSL_GENERATED_64_CHAR_HEX

# ====================================
# CORS CONFIGURATION
# ====================================
CORS_ORIGIN=https://your-frontend-domain.vercel.app
CORS_CREDENTIALS=true

# ====================================
# RATE LIMITING
# ====================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ====================================
# FILE UPLOAD CONFIGURATION
# ====================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# ====================================
# HEALTH CHECK CONFIGURATION
# ====================================
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true

# ====================================
# EMAIL CONFIGURATION (Optional)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@bizmark.id

# ====================================
# LOGGING CONFIGURATION
# ====================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ====================================
# SECURITY HEADERS
# ====================================
HELMET_ENABLED=true
CSP_ENABLED=true

# ====================================
# API DOCUMENTATION
# ====================================
ENABLE_DOCS=true
DOCS_PATH=/api/docs

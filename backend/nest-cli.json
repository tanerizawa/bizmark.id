{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "assets": ["**/*.hbs", "**/*.json"],
    "watchAssets": true
  },
  "watchMode": {
    "ignored": ["node_modules", "dist", "coverage", ".git"]
  }
}

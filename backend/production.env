# production.env - Konfigurasi untuk production environment

# Node Environment
NODE_ENV=production

# Application Configuration
PORT=10000
APP_NAME=Bizmark UMKM
APP_URL=https://bizmark-frontend.onrender.com
API_URL=https://bizmark-api.onrender.com

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_GLOBAL_PREFIX=api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_TIMEFRAME=60

# Logging
LOG_LEVEL=info
ENABLE_DOCS=true

# CORS Configuration
CORS_ORIGINS=https://bizmark-frontend.onrender.com

# Database - akan diisi otomatis dari Render environment variable
# DATABASE_URL=postgres://...

# JWT Configuration - akan diisi melalui Render dashboard
# JWT_SECRET=change-me-in-production
# JWT_REFRESH_SECRET=change-me-in-production
JWT_EXPIRES_IN=3600

# Feature Flags
ENABLE_BULL_BOARD=false
ENABLE_METRICS=true

# Hapus MinIO dan atur S3 compatible (Render)
S3_REGION=auto
# S3_BUCKET=bizmark-production
# S3_ACCESS_KEY=change-me
# S3_SECRET_KEY=change-me

# Redis URL untuk caching/queue (akan diisi dari Render)
# REDIS_URL=redis://...
